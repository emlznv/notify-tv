{
  "name": "NotifyTV",
  "description": "Manage your favorite TV series and get notified for upcoming episodes.",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
