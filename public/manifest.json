{
  "name": "Chrome Tv Notify Extension",
  "description": "Manage shows you are currently watching and get notified when there is a new episode.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
